{{> header}}

<h2>게시글 수정</h2>
<form>
    <div class="form-group">
        <label for="title">제목</label>
        <input type="text" class="form-control" id="title" value="{{post.title}}" placeholder="제목을 입력하세요">
    </div>
    <div class="form-group">
        <label for="content">내용</label>
        <textarea class="form-control" id="content" rows="10" placeholder="내용을 입력하세요">{{post.content}}</textarea>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">수정</button>
        <a href="/board/{{post.id}}" class="btn btn-secondary">취소</a>
    </div>
</form>

{{> footer}}