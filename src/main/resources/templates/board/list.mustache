{{> header}}

<h2>게시판 목록</h2>
<form class="form-inline mb-3">
    <div class="form-group mr-2">
        <select class="form-control" id="searchCondition">
            <option value="title">제목</option>
            <option value="content">내용</option>
            <option value="writer">작성자</option>
        </select>
    </div>
    <div class="form-group mr-2">
        <input type="text" class="form-control" id="searchKeyword" placeholder="검색어를 입력하세요">
    </div>
    <button type="button" class="btn btn-primary">검색</button>
</form>

<table class="table table-striped">
    <thead>
    <tr>
        <th>번호</th>
        <th>제목</th>
        <th>작성자</th>
        <th>작성일</th>
    </tr>
    </thead>
    <tbody>
    {{#boardList}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/board/{{id}}">{{title}}</a></td>
            <td>{{writer}}</td>
            <td>{{createdAt}}</td>
        </tr>
    {{/boardList}}
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item {{#paging.disablePrev}}disabled{{/paging.disablePrev}}">
            <a class="page-link" href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {{#paging.pageList}}
            <li class="page-item {{#isCurrentPage}}active{{/isCurrentPage}}">
                <a class="page-link" href="#">{{pageNum}}</a>
            </li>
        {{/paging.pageList}}
        <li class="page-item {{#paging.disableNext}}disabled{{/paging.disableNext}}">
            <a class="page-link" href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>

<div class="text-right">
    <a href="/board/write" class="btn btn-primary">글쓰기</a>
</div>

{{> footer}}